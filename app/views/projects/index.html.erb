<section class="well well5">
  <div class="container">

    <h4 class="text-center">
      Our Largest Projects
    </h4>
    <% @bigProjects.each_slice(2).each do |group| %>
    <div class="row wow fadeInDown">
      <% group.each do |a| %>
      <div class="col-sm-6 col-xs-12" style="padding:2em">
        <div class="flex-container-custom" style="height:260px; overflow: hidden;">
          <img class="" src="<%= a.asset.url(:medium) %>" alt="">
        </div>

        <div class="caption">
          <h6 class="offset-3">
            <%= a.title %>
          </h6>

          <p class=""><%= a.text %></p>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>

    <div class="paginate-center">
      <%= paginate @bigProjects%>
    </div>
  </div>
</section>

<% @projects.each do |p| %>
<section class="well well7">
  <div class="container">
    <h3 class="text-center">
      <%= p.title %>
    </h3>

    <p class="text-center">
      <%= p.text %>
    </p>
    <div class="row">

      <ul class="index-list index-list_mod col-4_mod">
        <% p.subprojects.each do |s| %>
        <li class="col-md-4 col-sm-6 col-xs-12 wow fadeInRight">

          <h6>
            <a href="#">
              <%= s.title %>
            </a>
          </h6>

          <p>
            <%= s.text %>
          </p>
        </li>

        <% end %>
      </ul>
    </div>

  </div>
</section>
<% end %>
