<section class="well well17">
  <div class="container">
    <h2 class="text-center page-header-custom" style="padding-bottom: 1.5em;">
      <%= t :references %>
    </h2>

    <ul class="nav nav-justified" id="filter">
      <li class="nav-item">
        <%= link_to t :largest_projects, controller: 'projects', action: 'index'%>
      </li>
      <li class="nav-item" id="all_projects">
        <%= link_to t :all_projects, controller: 'projects', action: 'show', id: 0 %>
      </li>
      <% @projects.each do |project| %>
      <li class="nav-item" id="<%=project.id.to_s %>">
        <%= link_to project.title, controller: 'projects', action: 'show', id: project.id %>
      </li>
      <% end %>
    </ul>
  </div>
</section>

<script>
  var filter = window.location.href.slice(-1);
  var element;
  if (filter == "0"){
    element = document.getElementById("all_projects");
  }else{
    element = document.getElementById(filter);
  }
  element.classList.add("active_filter");
</script>

<section class="well">
  <div class="container">

    <h3 class="text-center arabic_lg">

    </h4>
    <% c = 0 %>
    <% @subprojects.each_slice(2).each do |group| %>
    <div class="row">
      <% group.each do |a| %>
      <div class="col-sm-6 col-xs-12" style="padding:2em">
        <div class="flex-container-custom" style="height:260px; overflow: hidden;">
          <img src="<%= @images[c].asset.url(:medium) %>" alt=""/>
        </div>

        <div class="caption">
          <h6 class="offset-3 arabic_md">
            <%= a.title %>
          </h6>
          <p class="arabic_sm"><%= a.text %></p>
          <% c += 1 %>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>

    <div class="paginate-center">
      <%= paginate @subprojects%>
    </div>
  </div>
</section>

