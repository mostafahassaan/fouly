<header class="<%= 'head1' if controller_name != 'home' %> ">
  <div id="stuck_container" class="stuck_container">
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <h1 class="navbar-brand">
            <a data-type='rd-navbar-brand'>
            <%= t :nav_logo1 %> <span>
                <%= t :nav_logo2 %> </span>
            </a>
          </h1>
        </div>

        <ul class="navbar-nav sf-menu navbar-right" data-type="navbar" id="navbar">

          <li>
            <%= link_to t :nav_home, controller: 'home' %>
          </li>
          <li class="dropdown">
            <a><%= t :nav_services %></a>
            <ul class="dropdown-menu">
              <% @services.each do |s| %>
              <li><%= link_to s.title, controller: 'services', action: 'show', id: s.id %></li>
              <% end %>
            </ul>
          </li>
          <li>
            <%= link_to(t(:nav_news) , controller: 'articles')  %>
          </li>
          <li>
            <%= link_to(t(:nav_references), controller: 'projects') %>
          </li>
          <li>
            <%= link_to(t(:nav_contact), controller: 'contact') %>
          </li>
          <li>

            <% if I18n.locale == I18n.default_locale %>
            <%= link_to "Arabic", :locale=>'ar'%>

            <% else %>
              <%= link_to "English", :locale=>'en', :style=>'font-size: 5px'%>


            <%end%>
          </li>
        </ul>
      </div>
    </nav>

  </div>
</header>
