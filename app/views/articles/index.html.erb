<section class="well well5" id="project">
  <div class="container center767">
    <h3 class="text-center arabic_lg">
      <%= t :nav_news %>
    </h3>

    <% @articles.each_slice(2).each do |group| %>
    <div class="row wow fadeIn">
      <% group.each do |a| %>
      <div class="col-sm-6 col-xs-12" style="padding:2em">
        <div class="flex-container-custom" style="height:260px; overflow: hidden;">
          <img class="" src="<%= a.asset.url(:medium) %>" alt="">
        </div>


        <div class="caption">
          <h6 class="offset-3 arabic_md">
            <a href="#">
              <%= a.title %>
            </a>
          </h6>


          <p class="arabic_sm"><%= a.summary %></p>
          <br>
            <% if I18n.locale == :ar %>
              <%= link_to raw("<span> إقرأ المزيد</span>"), :controller => "articles", :action => "show", :id => a.id%>
              <i class="fa fa-angle-double-left" aria-hidden="true"></i>
            <% else %>

                <i class="fa fa-angle-double-right" aria-hidden="true"></i>
              <div class="arabic-xs">
              <%= link_to raw("<span>Read more</span>"), :controller => "articles", :action => "show", :id => a.id%>
              </div>
            <% end %>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
    <div class="paginate-center">
      <%= paginate @articles %>
    </div>

  </div>
</section>
