<section class="well well-7">
  <div class="container">
    <div class="row">
      <h2 class="text-center page-header">
        <%= @service.title%>
      </h2>
      <br>
      <p class="text-center">
        <%= @service.text %>
      </p>
    </div>

    <div class="row">
      <h2 class="text-center page-title">
        Services List
      </h2>
      <br>
      <div class="row is-flex">
        <% @service.points.each do |s| %>
        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 col-xs-12">
          <div class="media">
            <div class="media-left">
              <i class="fa fa-check-circle-o" style="padding-bottom: 20px;"></i>
            </div>
            <div class="media-body">
              <p><%= s.text %></p>
            </div>
          </div>
        </div>
        <% end %>
      </ul>
    </div>

  </div>
</div>
</section>

<section class="well well4 well4-mod parallax text-center" data-url="/assets/parallax1.jpg" data-mobile="true"data-speed="0.6">
  <div class="container">
    <h2 class="fw-l arabic_xl gallery-title">
      Gallery
    </h2>
  </div>
  <div id="owl-demo" style="max-width: 80%">
    <% @images.each do |s| %>
    <div class="item" >
      <a class="fancybox" href="<%= s.asset.url(:large) %>">
        <img src="<%= s.asset.url(:square) %>" alt=""/>
      </a>
    </div>
    <% end %>
  </div>
</section>

<section class="well well3 well3-mod" id="services">
  <div class="container">
    <h2 class="text-center page-title">
      Related Services
    </h2>

    <div class="row is-flex">

      <% @service.subservices.each do |s| %>
      <div class="col-md-4 col-sm-6 col-xs-12" style="padding-bottom: 5em;" data-wow-delay=".7s">
        <div class="thumbnail thumbnail4">
          <img src="<%= s.images.first.asset.url(:small) %>" alt="">

          <div class="caption">
            <h6>
              <%= s.title %>
            </h6>

            <p><%= s.text %> </p>
          </div>
        </div>
      </div>
      <% end %>
    </div>


  </div>
</section>
